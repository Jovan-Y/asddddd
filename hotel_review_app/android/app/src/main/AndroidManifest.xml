<!-- android/app/src/main/AndroidManifest.xml -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Izin untuk Internet -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- Izin untuk Lokasi -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher"
        android:label="hotel_review_app"
        android:usesCleartextTraffic="true"> <!-- Hanya untuk pengembangan, hapus di produksi jika tidak diperlukan -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            <!-- Menentukan tema Android untuk Activity yang menampilkan Flutter UI. -->
            <meta-data
              android:name="io.flutter.embedding.android.NormalTheme"
              android:resource="@style/NormalTheme"
              />
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- Jangan menyentuh meta-data yang disediakan oleh Flutter di bawah ini. -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
        
        <!-- Tambahkan meta-data untuk Google Maps API Key di sini -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyD2K3_YrJPCZvpDOVfU6idJe66nUMIOsYg" /> <!-- Ganti dengan API Key Anda -->

    </application>
</manifest>